@model MikeUpjohnWebPortfolioV2CMS.Models.ImageViewModel
@{
    ViewBag.Title = "Add New Image";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-xs-12">
        <div class="content-area">
            <div class="left-title">
                <h1>Add New Image</h1>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="content-area">
            @*<form action="index.html">*@
            @using (Html.BeginForm("Add", "Images", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="col-xs-12">
                    <div class="form-component">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 form-label">
                                <label>Upload an Image: </label>
                                <span class="validation-asterisk">*</span>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9">
                                @*<input type="file" placeholder="Blog Title" />*@
                                @Html.TextBoxFor(m => m.ImageFile, new { type = "file" })
                            </div>
                        </div>
                    </div>
                    <div class="form-component">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 form-label">
                                <label>New File Name: </label>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9">
                                @*<input type="text" placeholder="new-file-name.jpg" />*@
                                @Html.TextBoxFor(m => m.NewFileName, new { placeholder = "New File Name (e.g. my-image.jpg)" })
                            </div>
                        </div>
                    </div>
                    <div class="form-component">
                        <div class="row">
                            <div class="col-xs-12 center-item">
                                <input type="submit" value="Upload New Image">
                            </div>
                        </div>
                    </div>
                </div>
            }
            @*</form>*@
        </div>
    </div>
</div>